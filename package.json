{
  "name": "pronto-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm install && npx --yes prisma@5.18.0 generate && tsc -p tsconfig.json",
    "start": "node scripts/deploy.cjs",
    "start:server": "node dist/server.js",
    "postinstall": "node scripts/ensure-db.js",
    "fix:migrations": "node scripts/fix-migrations.js",
    "pre:migrate": "node scripts/pre-migrate.js",
    "migrate": "node scripts/pre-migrate.js && npx prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "prisma": "^5.18.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
