generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // "user" or "admin"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  restaurants Restaurant[]

  @@map("users")
}

model Restaurant {
  id          String   @id @default(cuid())
  ownerId     String
  name        String
  slug        String   @unique
  phone       String // WhatsApp (ex: 5511999999999)
  description String?
  slogan      String? // Frase motivadora/tagline do restaurante
  address     String?
  logoUrl     String? // URL da logo/imagem do restaurante
  cnpj        String? // CNPJ do estabelecimento
  email       String? // Email de contato
  openingHours String? // Horário de funcionamento (ex: "Seg-Sex: 10h-22h")
  deliveryFee  Int?    // Taxa de entrega em centavos
  minimumOrder Int?    // Pedido mínimo em centavos
  estimatedDeliveryTime String? // Tempo estimado (ex: "30-45 min")
  acceptsCard  Boolean @default(false) // Aceita cartão
  acceptsPix   Boolean @default(false) // Aceita PIX
  acceptsCash  Boolean @default(true)  // Aceita dinheiro
  isActive    Boolean @default(true)  // Restaurante ativo/bloqueado
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner      User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  categories Category[]
  products   Product[]
  orders     Order[]
  coupons    Coupon[]
  Banner     Banner[]

  @@index([ownerId])
  @@index([slug])
  @@map("restaurants")
}

model Category {
  id           String   @id @default(cuid())
  restaurantId String
  name         String
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  products   Product[]

  @@index([restaurantId])
  @@index([sortOrder])
  @@index([isActive])
  @@map("categories")
}

model Product {
  id           String   @id @default(cuid())
  restaurantId String
  categoryId   String?
  name         String
  description  String?
  priceCents   Int
  imageUrl     String?
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  category   Category?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  orderItems OrderItem[]

  @@index([restaurantId])
  @@index([categoryId])
  @@index([isActive])
  @@index([sortOrder])
  @@index([createdAt])
  @@map("products")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  addresses CustomerAddress[]

  @@index([phone])
  @@map("customers")
}

model CustomerAddress {
  id         String   @id @default(cuid())
  customerId String
  street     String
  number     String
  complement String?
  district   String
  city       String
  state      String
  zipCode    String?
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  orders   Order[]

  @@index([customerId])
  @@map("customer_addresses")
}

model Order {
  id               String   @id @default(cuid())
  restaurantId     String
  customerId       String
  addressId        String?
  couponId         String?
  orderNumber      Int // Número sequencial por restaurante
  status           String   @default("pending") // pending, confirmed, preparing, ready, delivering, delivered, cancelled
  priority         String   @default("normal") // normal, urgent
  subtotalCents    Int // Total antes do desconto
  discountCents    Int      @default(0) // Desconto aplicado pelo cupom
  totalCents       Int // Total final após desconto
  deliveryFeeCents Int      @default(0)
  paymentMethod    String? // pix, card, cash, online
  paymentStatus    String   @default("pending") // pending, paid, failed
  notes            String? // Observações do cliente
  kitchenNotes     String? // Observações da cozinha
  prepStartedAt    DateTime? // Quando começou a preparação
  readyAt          DateTime? // Quando ficou pronto
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  restaurant Restaurant       @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  customer   Customer         @relation(fields: [customerId], references: [id], onDelete: Cascade)
  address    CustomerAddress? @relation(fields: [addressId], references: [id], onDelete: SetNull)
  coupon     Coupon?          @relation(fields: [couponId], references: [id], onDelete: SetNull)
  items      OrderItem[]

  @@index([restaurantId])
  @@index([customerId])
  @@index([couponId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  productName String // Snapshot do nome
  priceCents  Int // Snapshot do preço
  quantity    Int
  notes       String? // Observações específicas do item
  createdAt   DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model Coupon {
  id            String    @id @default(cuid())
  restaurantId  String
  code          String // Código do cupom (ex: PRIMEIRACOMPRA, NATAL2026)
  type          String // "percentage" ou "fixed"
  value         Int // Percentual (ex: 10 = 10%) ou centavos (ex: 500 = R$5,00)
  minOrderCents Int       @default(0) // Valor mínimo do pedido em centavos
  maxUses       Int? // Limite total de usos (null = ilimitado)
  usedCount     Int       @default(0) // Contador de usos
  startDate     DateTime? // Data de início (null = já ativo)
  endDate       DateTime? // Data de fim (null = sem expiração)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  orders     Order[]

  @@unique([restaurantId, code]) // Código único por restaurante
  @@index([restaurantId])
  @@index([code])
  @@index([isActive])
  @@map("coupons")
}

model Banner {
  id              String    @id @default(cuid())
  restaurantId    String
  title           String
  description     String?
  imageUrl        String? // URL da imagem do banner
  linkUrl         String? // Link de destino ao clicar
  backgroundColor String    @default("#10b981") // Cor de fundo padrão (emerald-600)
  textColor       String    @default("#ffffff") // Cor do texto padrão (branco)
  position        String    @default("top") // top, middle, bottom
  sortOrder       Int       @default(0)
  startDate       DateTime? // Data de início (null = já ativo)
  endDate         DateTime? // Data de fim (null = sem expiração)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([isActive])
  @@index([position])
  @@index([sortOrder])
  @@map("banners")
}
